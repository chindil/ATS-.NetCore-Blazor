@inherits EvaluationToolbarBase

<div class="w-100 d-flex justify-content-end">
    <div class="btn-toolbar" role="toolbar" aria-label="Tools">
        <div class="btn-group mr-2 svg-fill svg-2 font-weight-bold" role="group" aria-label="First group">

            <div class="dropdown mx-1 btn-link ">
                <button type="button" class="btn mt-2 btn-link tool-icon dropdown-toggle" title="More actions" id="dropdownMenuButton" @onclick:preventDefault
                        data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="bi bi-three-dots font-icon-md"></i>
                </button>
                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                    <a class="dropdown-item" href="" @onclick="@(()=>ToolMenuClicked("copy"))" @onclick:preventDefault>Copy Candidate</a>
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item" href="" @onclick="@(()=>ToolMenuClicked("edit"))" @onclick:preventDefault>Edit Candidate</a>
                    <a class="dropdown-item" href="" @onclick="@(()=>ToolMenuClicked("delete"))" @onclick:preventDefault>Delete Candidate</a>
                </div>
            </div>
            <button type="button" class="btn mx-1 btn-link tool-icon" data-bs-toggle="tooltip" data-placement="top" title="Send an email"
                    @onclick="@(()=>ToolButtonClicked("email"))">
                <i class="bi bi-envelope font-icon-md"></i>
            </button>
            <button type="button" class="btn mx-1 btn-link tool-icon" title="Add a comment"
                    @onclick="@(()=>ToolButtonClicked("comment"))">
                <i class="bi bi-chat-text font-icon-md"></i>
            </button>
            <button type="button" class="btn mx-1 btn-link tool-icon" title="Add a event schedule"
                    @onclick="@(()=>ToolButtonClicked("schedule"))">
                <i class="bi bi-calendar2-plus font-icon-md"></i>
            </button>
            <button type="button" class="btn mx-1 btn-link tool-icon" title="Evaluate"
                    @onclick="@(()=>ToolButtonClicked("evaluate"))">
                <i class="bi bi-bookmark-star font-icon-md"></i>
            </button>
            <button type="button" class="btn mx-1 btn-link tool-icon" title="Mark as unqualified"
                    @onclick="@(()=>ToolButtonClicked("unqualify"))">
                <i class="bi bi-person-x font-icon-md"></i>
            </button>
        </div>
            <div class="btn-group mx-1 my-1">
                <button type="button" class="btn btn-primary">Move to</button>
                <button type="button" class="btn btn-primary dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <span class="sr-only">Move to</span>
                </button>
                <div class="dropdown-menu">
                    <a class="dropdown-item" href="" @onclick="@(()=>MoveButtonClicked("shortlisted"))" @onclick:preventDefault>Shortlisted</a>
                    <a class="dropdown-item" href="" @onclick="@(()=>MoveButtonClicked("phnscreen"))" @onclick:preventDefault>Phone Screen</a>
                    <a class="dropdown-item" href="" @onclick="@(()=>MoveButtonClicked("interview"))" @onclick:preventDefault>Interview</a>
                    <a class="dropdown-item" href="" @onclick="@(()=>MoveButtonClicked("offer"))" @onclick:preventDefault>Offer</a>
                    <a class="dropdown-item" href="" @onclick="@(()=>MoveButtonClicked("hired"))" @onclick:preventDefault>Hired</a>
                </div>
            </div>

    </div>
</div>

