
@if (IsSmallAvatar)
{
    <img src="http://localhost:6001/api/CDA?puid=@ModuleID&key=@ImageKey" alt="@AltTest" class="avatar avatar-logo-sm @CssClass"
        onerror="this.onerror=null; this.src='_content/Stx.HRM/assets/img/avatar-fill.svg'; this.style='padding: 15px;'">

    @*
    <img src="_content/Stx.HRM/assets/img/avatar-fill.svg" alt="" class="avatar-img @CssClass">
    *@
}
else @*"avatar"*@
{
    <img src="http://localhost:6001/api/CDA?puid=@ModuleID&key=@ImageKey" alt="@AltTest" class="avatar avatar-logo @CssClass" 
        onerror="this.onerror=null; this.src='_content/Stx.HRM/assets/img/avatar-fill.svg'; this.style='padding: 15px;'">
    @*<img src="_content/Stx.HRM/assets/img/avatar-fill.svg" alt="" class="avatar-img @CssClass">*@
    @*<img id="currentPhoto" src="SomeImage.jpg" onerror="this.onerror=null; this.src='Default.jpg'" alt="" width="100" height="120">*@
}

@code
{
    [Parameter] public string CssClass { get; set; }
    [Parameter] public bool IsSmallAvatar { get; set; } = false;
    [Parameter] public int ModuleID { get; set; }
    [Parameter] public int ImageKey { get; set; }
    [Parameter] public string AltTest { get; set; }
}
